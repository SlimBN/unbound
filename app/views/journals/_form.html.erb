<%= form_for(@journal) do |f| %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :affiche %><br />
    <%= f.file_field :affiche %>
  </div>

    <% if user_signed_in? %>
    <%= f.hidden_field :user_id, :value => current_user.id %>
    <% end %>

  <div class="field">
    <%= f.label :country_id %><br />
    <select id="journal_country_id" name="journal[country_id]">
      <% Country.order("name ASC").each do |country|  %>
        <option value="<%= country.id %>"><%= country.name %> </option>
      <% end %>
    </select>
  </div>

  <div class="field">
    <%= f.label :state_id %><br />
    <select id="journal_state_id" name="journal[state_id]">
      <% State.order("name ASC").each do |state|  %>
        <option value="<%= state.id %>"><%= state.name %> </option>
      <% end %>
    </select>
  </div>
  <div class="field">
    <%= f.label :continent_id %><br />
    <select id="journal_continent_id" name="journal[continent_id]">
      <% Continent.order("name ASC").each do |continent|  %>
        <option value="<%= continent.id %>"><%= continent.name %> </option>
      <% end %>
    </select>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
