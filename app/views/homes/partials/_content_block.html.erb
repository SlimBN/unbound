<div id="content-bloc">

	<div class="superfeaturedcommands">
		<div class="previous">
			<< Previous Shell
		</div>

		<div class="next">
			Next Shell >>
		</div>
	</div>

	<% Article.where("superfeatured = ?", TRUE).last(1).each do |superfeatured| %>	
		<div class="superfeatured">
			
			<div class="title">
				<%= superfeatured.title %>
			</div>

			<div class="content">
				<%= superfeatured.content %>
			</div>

			<div class="author">
				<%= link_to superfeatured.user.username, user_path(superfeatured.user) %>
			</div>
				
			
		</div>
	<% end %>


	<div class="latestarticles">
		<% Article.last(20).each do |article| %>
			<div class="article">
				<div class="title">
					<%= link_to article.title, article_path(article) %>
				</div>

				<!--<div class="author">
					<%= link_to article.user.username, user_path(article.user) %>
				</div>-->
			</div>
		<% end %>
	</div>

</div>