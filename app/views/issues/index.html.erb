<h1>Listing issues</h1>

<table>
  <tr>
    <th>Version</th>
    <th>Couverture</th>
    <th>Special</th>
    <th>Journal</th>
    <th>Edition</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @issues.each do |issue| %>
  <tr>
    <td><%= issue.version %></td>
    <td><%= issue.couverture %></td>
    <td><%= issue.special %></td>
    <td><%= issue.journal_id %></td>
    <td><%= issue.edition %></td>
    <td><%= link_to 'Show', issue %></td>
    <td><%= link_to 'Edit', edit_issue_path(issue) %></td>
    <td><%= link_to 'Destroy', issue, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

