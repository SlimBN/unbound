<%= form_for(@article) do |f| %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :featured %><br />
    <%= f.check_box :featured %>
  </div>

  <div class="field">
    <%= f.label :superfeatured %><br />
    <%= f.check_box :superfeatured %>
  </div>

  <div class="field">
    <%= f.label :title %><br />
    <select id="article_size" name="article[size]">
        <option value="1x1"> 1 x 1</option>
        <option value="1x2"> 1 x 2</option>
        <option value="2x1"> 2 x 1</option>
        <option value="2x2"> 2 x 2</option>
    </select>
  </div>

  <div class="field">
    <%= f.label :content %><br />
    <%= f.text_area :content %>
  </div>
  <div class="field">
    <%= f.label :cover %><br />
    <%= f.file_field :cover %>
  </div>


    <% if user_signed_in? %>
    <%= f.hidden_field :user_id, :value => current_user.id %>
    <% end %>

  <div class="field">
    <%= f.label :is_draft %><br />
    <%= f.check_box :is_draft %>
  </div>
    <select id="article_category_id" name="article[category_id]">
      <% Category.order("name ASC").each do |category|  %>
        <option value="<%= category.id %>"><%= category.name %> </option>
      <% end %>
    </select>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
